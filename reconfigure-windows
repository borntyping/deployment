#!/bin/bash
export ANSIBLE_REPO="$(readlink -f $(dirname "${BASH_SOURCE[0]}"))"
export ANSIBLE_CONFIG="${ANSIBLE_REPO}/ansible.cfg"
export ANSIBLE_INVENTORY="${ANSIBLE_REPO}/inventory.conf"
export ANSIBLE_ROLES_PATH="${ANSIBLE_REPO}/roles/:${gb}/sclements/deployment/roles/"
export ANSIBLE_VAULT_PASSWORD_FILE=""

exec ansible-playbook --diff "$@" "${ANSIBLE_REPO}/windows.yml"
