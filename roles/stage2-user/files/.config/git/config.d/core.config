[init]
defaultBranch = main

[core]
autocrlf = input
editor = micro
excludesfile = ~/.config/git/gitignore
hooksPath = ~/.config/git/hooks
pager = bat

[push]
default = current

[pull]
default = current

[branch]
autosetuprebase = always

[rebase]
autostash = true
autosquash = true

[merge]
tool = meld
conflictstyle = diff3

[credential]
helper = store

[rerere]
enabled = true

[transfer]
fsckobjects = true

[fetch]
fsckobjects = true

[receive]
fsckobjects = true

[pretty]
graph=%C(red)%h%C(reset) %s%C(cyan)%d%C(reset) %C(bold green)(%ar, %an)%C(reset)

[alias]
amend-and-force-push = !git commit --all --amend --no-edit && git push --force-with-lease
hist = log --graph --pretty=graph --date=short --decorate -n 10
history = log --all --graph --pretty=graph --date=short --decorate
ignored-files = ls-files -o -i --exclude-standard
recent-branches = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads

[pager]
hist = less -FX

[color]
diff = auto
status = auto
branch = auto
ui = auto
interactive = auto
pager = true

[color "status"]
added = green
changed = yellow
untracked = red

[diff]
compactionHeuristic = true
noprefix = true

[commit]
verbose = true

[gui]
historybrowser = gitg
editor = pycharm-professional

[cola]
tabwidth = 4
fontdiff = Fantasque Sans Mono,11,-1,5,50,0,0,0,0,0
spellcheck = true

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[url "git@gitlab.com:"]
insteadOf = https://gitlab.com/
