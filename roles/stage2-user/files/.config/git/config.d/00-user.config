[init]
defaultBranch = main

[core]
autocrlf = input
editor = micro
excludesfile = ~/.config/git/gitignore
hooksPath = ~/.config/git/hooks
pager = bat

[push]
default = current

[pull]
ff = only

[branch]
autosetuprebase = always

[rebase]
autostash = true
autosquash = true

[merge]
tool = meld
conflictstyle = diff3

[mergetool]
keepBackup = false

[credential]
helper = store

[rerere]
enabled = true

[transfer]
fsckobjects = true

[fetch]
fsckobjects = true

[receive]
fsckobjects = true

[pretty]
graph=%C(red)%h%C(reset) %s%C(cyan)%d%C(reset) %C(bold green)(%ah, %an)%C(reset)

[alias]
amend-and-force-push = !git commit --all --amend --no-edit && git push --force-with-lease
create-merge-request = push --push-option=merge_request.create
hist = log --graph --pretty=graph --date=short --decorate -n 10
history = log --all --graph --pretty=graph --date=short --decorate
ignored-files = ls-files -o -i --exclude-standard
recent-branches = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads

[pager]
hist = less -FX

[color]
diff = auto
status = auto
branch = auto
ui = auto
interactive = auto
pager = true

[color "status"]
added = green
changed = yellow
untracked = red

[diff]
algorithm = histogram
noprefix = true
mnemonicPrefix = true

[commit]
verbose = true

[gui]
historybrowser = gitg
editor = pycharm-professional

[includeIf "gitdir:~/Development/github.com/**"]
path = hosts.d/github.com/config

[includeIf "gitdir:~/Development/gitlab.com/**"]
path = hosts.d/gitlab.com/config
