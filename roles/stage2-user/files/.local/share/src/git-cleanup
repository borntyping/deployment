#!/bin/bash

set -euo pipefail

BRANCH="${1:-main}"

# Remove branches merged into the named branch.
# The 'master' branch is never merged.
git branch --merged "$BRANCH" | \
    grep -v -e "$BRANCH" -e "master" -e "main" -e "* " |\
    xargs --no-run-if-empty --max-args=1 -- git branch -d

# Prune remote branches.
git remote | xargs --no-run-if-empty --max-args=1 -- git remote prune
